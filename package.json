{
  "private": true,
  "name": "remix-nest",
  "description": "PoC for a Remix-app served by a Nest.js backend",
  "keywords": [
    "remix",
    "nest",
    "nestjs",
    "prisma"
  ],
  "license": "MIT",
  "scripts": {
    "postinstall": "remix setup node",
    "prebuild": "rimraf dist server/build public/build",
    "build:remix": "remix build",
    "build:nest": "nest build",
    "build": "remix build && nest build",
    "dev:remix": "remix watch",
    "dev:nest": "nest start --watch",
    "format": "prettier --write \"app/**/*.ts\" \"src/**/*.ts\"",
    "lint": "eslint \"{app,src}/**/*.ts\" --fix",
    "test": "jest",
    "e2e": "cypress open"
  },
  "dependencies": {
    "@nestjs/common": "8.2.4",
    "@nestjs/core": "8.2.4",
    "@nestjs/platform-express": "8.2.4",
    "@nestjs/schedule": "1.0.2",
    "@prisma/client": "3.6.0",
    "@remix-run/express": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.17.2",
    "morgan": "^1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reflect-metadata": "^0.1.13",
    "remix": "^1.1.1",
    "rxjs": "7.4.0"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.6",
    "@nestjs/schematics": "8.0.5",
    "@nestjs/testing": "8.2.4",
    "@remix-run/dev": "^1.1.1",
    "@testing-library/cypress": "^8.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "cypress": "^9.1.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "prisma": "3.6.0",
    "ts-jest": "^27.1.2",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
